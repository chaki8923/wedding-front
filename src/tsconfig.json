{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./*"],
      "@/atoms/*": ["./atoms/*"],
      "@/components/*": ["./components/*"],
      "@/graphql/*": ["./graphql/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/pages/*": ["./pages/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["src/next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/application.js"],
  "exclude": ["node_modules"]
}
